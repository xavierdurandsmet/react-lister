extends ../layout

block content
  form(method='POST')
    legend Register
    .form-group
      label(for='email') Email
      input.form-control(type='text', name='email', autofocus)
    .form-group
      label(for='password') Password
      input.form-control(type='password', name='password')
    button.btn.btn-primary(type='submit') Register